// 浅色模式
.theme-mode-light
  --bodyBg: #F5F5F5
  --mainBg: #F5F5F5
  --sidebarBg: #F5F5F5
  --blurBg: #F5F5F5
  // --textColor: #004050
  --textLightenColor: #4a8a5a
  --borderColor: rgba(0,0,0,.15)
  --codeBg: #282C34
  --codeColor: #fff
  codeThemeDark()

// 深色模式
.theme-mode-dark
  --bodyBg: #22252e
  --mainBg: #22252e
  --sidebarBg: #22252e
  --blurBg: #22252e
  --textColor: #ADBAC7
  --textLightenColor: #4a8a5a
  --borderColor: #2C2C3A
  --codeBg: #282C34
  --codeColor: #fff
  codeThemeDark()

// 阅读模式
